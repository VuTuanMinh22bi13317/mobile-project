<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <!--    Dim Background-->

    <View
        android:id="@+id/dim_background"
        android:layout_width="match_parent"
        android:layout_height="844dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        />

    <!-- Options Board -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Forward-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/forward_icon"
                android:src="@drawable/arrow"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Forward"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Folder-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/folder"
                android:src="@drawable/text"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Add to folder"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Spam-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/spam"
                android:src="@drawable/warning"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Report spam"
                android:textSize="15sp"
                android:textColor="#212121" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD" />

        <!--        Delete-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clipToOutline="true"
            >

            <ImageView
                android:id="@+id/delete"
                android:src="@drawable/trash"
                android:layout_width="25.81dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:lineSpacingExtra="8sp"
                android:translationY="-3.79sp"
                android:gravity="right|top" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="left"
                android:paddingStart="65dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Delete"
                android:textSize="15sp"
                android:textColor="#E13535" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
